<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<div class="container py-5">
    <%- include('../partials/flash') %>

    <div class="page-header d-flex align-items-center justify-content-between">
        <div>
            <h2>My Bookings</h2>
            <p class="text-muted mb-0">All your appointments in one place.</p>
        </div>
        <a href="/client/shops" class="btn-gold px-4 py-2 d-none d-md-inline-flex align-items-center gap-2">
            <i class="bi bi-plus"></i> New Booking
        </a>
    </div>

    <% if (bookings.length === 0) { %>
        <div class="text-center py-5 bg-white rounded-4 border">
            <i class="bi bi-calendar-x display-4 text-muted mb-3 d-block"></i>
            <h5 class="text-muted">No bookings yet</h5>
            <p class="text-muted small">Browse services and book your first appointment.</p>
            <a href="/client/shops" class="btn-gold px-4 py-2 mt-2 d-inline-flex align-items-center gap-2">
                <i class="bi bi-search"></i> Browse Now
            </a>
        </div>
    <% } else { %>
        <div class="table-responsive table-schedora rounded-4 overflow-hidden shadow-sm">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Service</th>
                        <th>Shop</th>
                        <th>Date</th>
                        <th>Time</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(function(b) { %>
                        <tr>
                            <td class="text-muted">#<%= b.id %></td>
                            <td class="fw-semibold"><%= b.service_name %></td>
                            <td><%= b.shop_name %></td>
                            <td><%= new Date(b.booking_date).toLocaleDateString('en-GB',{day:'2-digit',month:'short',year:'numeric'}) %></td>
                            <td><%= b.booking_time.substring(0,5) %></td>
                            <td class="text-gold fw-semibold">$<%= parseFloat(b.total_price).toFixed(2) %></td>
                            <td><span class="status-badge badge-<%= b.status %>"><%= b.status %></span></td>
                            <td>
                                <% if (['pending','confirmed'].includes(b.status)) { %>
                                    <form action="/client/bookings/<%= b.id %>/cancel" method="POST" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-danger"
                                                data-confirm="Are you sure you want to cancel this booking?">
                                            Cancel
                                        </button>
                                    </form>
                                <% } else { %>
                                    <span class="text-muted small">â€”</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
