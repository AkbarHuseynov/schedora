<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<div class="container py-5">
    <%- include('../partials/flash') %>

    <!-- Shop header -->
    <div class="row g-4 mb-5">
        <div class="col-md-5">
            <% if (shop.cover_image) { %>
                <img src="/uploads/<%= shop.cover_image %>" alt="<%= shop.name %>"
                     class="w-100 rounded-4" style="height:300px;object-fit:cover;">
            <% } else { %>
                <div class="w-100 rounded-4 d-flex align-items-center justify-content-center bg-dark" style="height:300px;">
                    <i class="bi bi-shop text-gold" style="font-size:4rem;"></i>
                </div>
            <% } %>
        </div>
        <div class="col-md-7 d-flex flex-column justify-content-center">
            <span class="shop-badge mb-3"><%= shop.category %></span>
            <h2 class="fw-bold mb-2"><%= shop.name %></h2>
            <% if (shop.description) { %><p class="text-muted"><%= shop.description %></p><% } %>

            <div class="d-flex flex-wrap gap-3 text-muted small mt-2">
                <% if (shop.address) { %><span><i class="bi bi-geo-alt me-1"></i><%= shop.address %></span><% } %>
                <% if (shop.phone)   { %><span><i class="bi bi-telephone me-1"></i><%= shop.phone %></span><% } %>
                <span><i class="bi bi-person me-1"></i>Owner: <%= shop.owner_name %></span>
            </div>
        </div>
    </div>

    <!-- Location Map (respects map_visible setting) -->
    <% if (shop.latitude && shop.longitude && settings && settings.map_visible) { %>
        <div class="row g-4 mb-5">
            <div class="col-12">
                <h4 class="fw-bold mb-3">
                    <i class="bi bi-geo-alt me-2"></i>Location
                </h4>
                <div id="shop-map" class="rounded-4" style="height:400px;border:1px solid var(--border);"></div>
                <p class="text-muted small mt-2">
                    <% if (settings && settings.location_mode === 'auto') { %>
                        <i class="bi bi-info-circle me-1"></i>Distance will be shown once we know your location
                    <% } %>
                </p>
            </div>
        </div>

        <!-- Leaflet CSS & JS -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.css">
        <script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.js"></script>
        <script>
            document.addEventListener('DOMContentLoaded', function() {
                const map = L.map('shop-map').setView([<%= shop.latitude %>, <%= shop.longitude %>], 15);

                L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                    attribution: 'Â© OpenStreetMap contributors',
                    maxZoom: 19
                }).addTo(map);

                const marker = L.marker([<%= shop.latitude %>, <%= shop.longitude %>]).addTo(map);
                marker.bindPopup('<strong><%= shop.name %></strong><br><%= shop.address %>');
                marker.openPopup();

                // Show distance if enabled and user allows location
                <% if (settings && settings.show_distance) { %>
                    if (navigator.geolocation) {
                        navigator.geolocation.getCurrentPosition(function(position) {
                            const userLat = position.coords.latitude;
                            const userLng = position.coords.longitude;
                            const distance = Math.round(
                                L.latLng(userLat, userLng).distanceTo(
                                    L.latLng(<%= shop.latitude %>, <%= shop.longitude %>)
                                ) / 1000 * 10
                            ) / 10;
                            const distanceEl = document.querySelector('#shop-map').parentElement.querySelector('.text-muted');
                            if (distanceEl) {
                                distanceEl.innerHTML += '<br><strong>' + distance + ' km away</strong>';
                            }
                        });
                    }
                <% } %>
            });
        </script>
    <% } %>

    <!-- Services -->
    <h4 class="fw-bold mb-4">Services Offered (<%= services.length %>)</h4>

    <% if (services.length === 0) { %>
        <div class="text-center py-5 bg-white rounded-4 border">
            <i class="bi bi-grid display-4 text-muted mb-3 d-block"></i>
            <p class="text-muted">This shop hasn't added any services yet.</p>
        </div>
    <% } else { %>
        <div class="row g-4">
            <% services.forEach(function(svc, idx) { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card-schedora h-100">
                        <!-- Photo carousel -->
                        <% if (svc.photos && svc.photos.length > 0) { %>
                            <div id="carousel-<%= svc.id %>" class="carousel slide" data-bs-ride="false">
                                <div class="carousel-inner">
                                    <% svc.photos.forEach(function(photo, pi) { %>
                                        <div class="carousel-item <%= pi === 0 ? 'active' : '' %>">
                                            <img src="/uploads/<%= photo.filename %>" class="d-block w-100"
                                                 style="height:200px;object-fit:cover;" alt="Service photo">
                                        </div>
                                    <% }); %>
                                </div>
                                <% if (svc.photos.length > 1) { %>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#carousel-<%= svc.id %>" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon"></span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#carousel-<%= svc.id %>" data-bs-slide="next">
                                        <span class="carousel-control-next-icon"></span>
                                    </button>
                                    <!-- Photo count badge -->
                                    <div class="position-absolute top-0 end-0 m-2">
                                        <span class="badge bg-dark opacity-75"><i class="bi bi-images me-1"></i><%= svc.photos.length %></span>
                                    </div>
                                <% } %>
                            </div>
                        <% } else { %>
                            <div class="d-flex align-items-center justify-content-center bg-light" style="height:200px;">
                                <i class="bi bi-image text-muted" style="font-size:2.5rem;"></i>
                            </div>
                        <% } %>

                        <div class="p-4">
                            <h5 class="fw-bold mb-1"><%= svc.name %></h5>
                            <% if (svc.description) { %>
                                <p class="text-muted small mb-3"><%= svc.description.substring(0,80) %><%= svc.description.length > 80 ? '...' : '' %></p>
                            <% } %>

                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <span class="fw-bold text-gold fs-5">$<%= parseFloat(svc.price).toFixed(2) %></span>
                                <span class="text-muted small"><i class="bi bi-clock me-1"></i><%= svc.duration_min %> min</span>
                            </div>

                            <a href="/client/book/<%= svc.id %>" class="btn-gold w-100 py-2 text-center d-block">
                                <i class="bi bi-calendar-plus me-1"></i> Book Now
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>

    <div class="mt-4">
        <a href="/client/shops" class="text-muted small"><i class="bi bi-arrow-left me-1"></i>Back to all shops</a>
    </div>
</div>

<%- include('../partials/footer') %>
