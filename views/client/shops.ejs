<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<div class="container py-5">
    <%- include('../partials/flash') %>

    <!-- Page header + search -->
    <div class="page-header">
        <h2 data-i18n="shops_title">Browse Shops & Services</h2>
        <p class="text-muted" data-i18n="shops_subtitle">Discover top-rated barbers, salons, spas and laser centers near you.</p>
    </div>

    <!-- Filter bar -->
    <form action="/client/shops" method="GET" class="row g-3 mb-5">
        <div class="col-md-6">
            <div class="input-group">
                <span class="input-group-text bg-white"><i class="bi bi-search text-muted"></i></span>
                <input type="text" name="search" class="form-control"
                       data-i18n-placeholder="shops_search_placeholder"
                       placeholder="Search shops..." value="<%= search %>">
            </div>
        </div>
        <div class="col-md-3">
            <select name="category" class="form-select">
                <option value="all"    <%= category === 'all'    ? 'selected' : '' %> data-i18n="shops_all_cats">All Categories</option>
                <option value="barber" <%= category === 'barber' ? 'selected' : '' %> data-i18n="shops_barber">Barber</option>
                <option value="beauty" <%= category === 'beauty' ? 'selected' : '' %> data-i18n="shops_beauty">Beauty Salon</option>
                <option value="spa"    <%= category === 'spa'    ? 'selected' : '' %> data-i18n="shops_spa">Spa</option>
                <option value="laser"  <%= category === 'laser'  ? 'selected' : '' %> data-i18n="shops_laser">Laser</option>
                <option value="other"  <%= category === 'other'  ? 'selected' : '' %> data-i18n="shops_other">Other</option>
            </select>
        </div>
        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn-gold flex-grow-1 py-2" data-i18n="shops_search_btn">Search</button>
            <button type="button" class="btn btn-outline-secondary" id="toggle-map-btn" title="Toggle map view">
                <i class="bi bi-map"></i>
            </button>
        </div>
    </form>

    <!-- Map View (hidden by default) -->
    <div id="map-container" class="mb-5" style="display:none;">
        <div id="shops-map" class="rounded-4" style="height:600px;border:1px solid var(--border);"></div>
        <p class="text-muted small mt-2 text-center">Click shop markers to see details</p>
    </div>

    <!-- Results -->
    <% if (shops.length === 0) { %>
        <div class="text-center py-5">
            <i class="bi bi-shop-window display-4 text-muted mb-3 d-block"></i>
            <h5 class="text-muted" data-i18n="shops_not_found">No shops found</h5>
            <p class="text-muted small" data-i18n="shops_not_found_desc">Try a different category or search term.</p>
        </div>
    <% } else { %>
        <div class="row g-4">
            <% shops.forEach(function(shop) { %>
                <div class="col-sm-6 col-lg-4">
                    <div class="card-schedora h-100">
                        <!-- Cover image -->
                        <% if (shop.cover_image) { %>
                            <img src="/uploads/<%= shop.cover_image %>" class="card-img-top" alt="<%= shop.name %>">
                        <% } else { %>
                            <div class="card-img-top d-flex align-items-center justify-content-center bg-dark" style="height:200px;">
                                <i class="bi bi-shop text-gold" style="font-size:3rem;"></i>
                            </div>
                        <% } %>

                        <div class="p-4">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="fw-bold mb-0"><%= shop.name %></h5>
                                <span class="shop-badge"><%= shop.category %></span>
                            </div>
                            <% if (shop.description) { %>
                                <p class="text-muted small mb-3"><%= shop.description.substring(0, 80) %><%= shop.description.length > 80 ? '...' : '' %></p>
                            <% } %>

                            <div class="d-flex gap-3 text-muted small mb-3">
                                <% if (shop.address) { %><span><i class="bi bi-geo-alt me-1"></i><%= shop.address.substring(0,25) %>...</span><% } %>
                                <span><i class="bi bi-grid me-1"></i><%= shop.service_count %> <span data-i18n="shops_services">services</span></span>
                            </div>

                            <% if (shop.latitude && shop.longitude && shop.map_visible) { %>
                                <div class="text-center mb-3">
                                    <button type="button" class="btn btn-sm btn-outline-gold view-location-btn"
                                            data-lat="<%= shop.latitude %>" data-lng="<%= shop.longitude %>"
                                            data-name="<%= shop.name %>" data-address="<%= shop.address %>">
                                        <i class="bi bi-map me-1"></i>View Location
                                    </button>
                                </div>
                            <% } %>

                            <a href="/client/shops/<%= shop.id %>" class="btn-gold w-100 py-2 text-center d-block" data-i18n="shops_view">
                                View Shop
                            </a>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<!-- Leaflet CSS & JS -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.css">
<script src="https://cdnjs.cloudflare.com/ajax/libs/leaflet/1.9.4/leaflet.min.js"></script>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const toggleBtn = document.getElementById('toggle-map-btn');
    const mapContainer = document.getElementById('map-container');
    const listView = document.querySelector('.row.g-4');
    let mapInitialized = false;
    let map = null;

    const shopsData = [
        <% shops.forEach((shop, idx) => { %>
            <% if (shop.latitude && shop.longitude && shop.map_visible) { %>
                {
                    id: <%= shop.id %>,
                    name: '<%- shop.name %>',
                    address: '<%- shop.address %>',
                    lat: <%= shop.latitude %>,
                    lng: <%= shop.longitude %>,
                    category: '<%= shop.category %>'
                },
            <% } %>
        <% }); %>
    ];

    toggleBtn.addEventListener('click', function() {
        mapContainer.style.display = mapContainer.style.display === 'none' ? 'block' : 'none';
        listView.style.display = listView.style.display === 'none' ? 'block' : 'none';

        if (mapContainer.style.display !== 'none' && !mapInitialized) {
            initializeMap();
            mapInitialized = true;
        } else if (map) {
            map.invalidateSize();
        }
    });

    function initializeMap() {
        const centerLat = shopsData.length > 0 ? shopsData[0].lat : 40.7128;
        const centerLng = shopsData.length > 0 ? shopsData[0].lng : -74.0060;

        map = L.map('shops-map').setView([centerLat, centerLng], 12);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors',
            maxZoom: 19
        }).addTo(map);

        shopsData.forEach(shop => {
            const marker = L.circleMarker([shop.lat, shop.lng], {
                radius: 8,
                fillColor: '#C9A96E',
                color: '#A8894E',
                weight: 2,
                opacity: 1,
                fillOpacity: 0.8
            }).addTo(map);

            marker.bindPopup(`
                <div style="font-weight:bold;margin-bottom:4px;">${shop.name}</div>
                <div style="font-size:0.85rem;color:#666;">${shop.address}</div>
                <div style="font-size:0.75rem;margin-top:6px;">
                    <a href="/client/shops/${shop.id}" style="color:#C9A96E;text-decoration:none;">View Shop →</a>
                </div>
            `);
        });
    }
});

// Location preview modal
document.addEventListener('DOMContentLoaded', function() {
    const viewLocationBtns = document.querySelectorAll('.view-location-btn');
    let locationModal = null;
    let locationMap = null;

    viewLocationBtns.forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            const lat = parseFloat(this.dataset.lat);
            const lng = parseFloat(this.dataset.lng);
            const name = this.dataset.name;
            const address = this.dataset.address;
            const shopCard = this.closest('.col-sm-6');
            const shopLink = shopCard.querySelector('[href*="/client/shops/"]');
            const shopId = shopLink.href.split('/').pop();

            showLocationModal(lat, lng, name, address, shopId);
        });
    });

    function showLocationModal(lat, lng, name, address, shopId) {
        // Create modal HTML if not exists
        if (!document.getElementById('locationViewModal')) {
            const modalHtml = `
                <div class="modal fade" id="locationViewModal" tabindex="-1" aria-labelledby="locationViewLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="locationViewLabel">Shop Location</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <h6 class="mb-2" id="location-shop-name"></h6>
                                <p class="text-muted small mb-3" id="location-shop-address"></p>
                                <div id="location-preview-map" style="height: 400px; border-radius: 8px; margin-bottom: 15px;"></div>
                                <div class="row g-2 text-center">
                                    <div class="col-md-6">
                                        <small class="text-muted d-block">Latitude</small>
                                        <strong id="location-lat"></strong>
                                    </div>
                                    <div class="col-md-6">
                                        <small class="text-muted d-block">Longitude</small>
                                        <strong id="location-lng"></strong>
                                    </div>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <a href="" id="view-full-shop-btn" class="btn btn-gold">View Full Shop</a>
                            </div>
                        </div>
                    </div>
                </div>
            `;
            document.body.insertAdjacentHTML('beforeend', modalHtml);
        }

        // Update modal content
        document.getElementById('location-shop-name').textContent = name;
        document.getElementById('location-shop-address').textContent = address;
        document.getElementById('location-lat').textContent = lat.toFixed(6);
        document.getElementById('location-lng').textContent = lng.toFixed(6);
        document.getElementById('view-full-shop-btn').href = `/client/shops/${shopId}`;

        // Show modal
        locationModal = new bootstrap.Modal(document.getElementById('locationViewModal'));
        locationModal.show();

        // Initialize map on modal show
        setTimeout(() => initializeLocationPreviewMap(lat, lng), 300);
    }

    function initializeLocationPreviewMap(lat, lng) {
        const mapContainer = document.getElementById('location-preview-map');
        if (!mapContainer) return;

        // Remove old map if exists
        if (locationMap) {
            locationMap.off();
            locationMap.remove();
        }

        locationMap = L.map('location-preview-map').setView([lat, lng], 15);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '© OpenStreetMap contributors',
            maxZoom: 19
        }).addTo(locationMap);

        L.circleMarker([lat, lng], {
            radius: 10,
            fillColor: '#C9A96E',
            color: '#A8894E',
            weight: 3,
            opacity: 1,
            fillOpacity: 0.9
        }).addTo(locationMap);
    }

    // Clean up map on modal hide
    document.addEventListener('hidden.bs.modal', function(e) {
        if (e.target.id === 'locationViewModal' && locationMap) {
            locationMap.off();
            locationMap.remove();
            locationMap = null;
        }
    });
});
</script>

<%- include('../partials/footer') %>
