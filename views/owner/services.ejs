<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<div class="container py-5">
    <%- include('../partials/flash') %>

    <div class="page-header d-flex align-items-center justify-content-between">
        <div>
            <h2 data-i18n="owner_services_title">My Services</h2>
            <p class="text-muted mb-0"><span data-i18n="owner_services_subtitle">Manage the services offered at</span> <strong><%= shop.name %></strong>.</p>
        </div>
        <a href="/owner/services/new" class="btn-gold px-4 py-2 d-inline-flex align-items-center gap-2">
            <i class="bi bi-plus-lg"></i> <span data-i18n="owner_add_service_btn">Add Service</span>
        </a>
    </div>

    <% if (services.length === 0) { %>
        <div class="text-center py-5 bg-white rounded-4 border">
            <i class="bi bi-grid display-3 text-muted mb-3 d-block"></i>
            <h5 class="text-muted" data-i18n="owner_no_services_title">No services yet</h5>
            <p class="text-muted small" data-i18n="owner_no_services_desc">Add your first service so clients can start booking.</p>
            <a href="/owner/services/new" class="btn-gold px-5 py-2 mt-2 d-inline-flex align-items-center gap-2">
                <i class="bi bi-plus-lg"></i> <span data-i18n="owner_add_service_btn">Add Service</span>
            </a>
        </div>
    <% } else { %>
        <div class="row g-4">
            <% services.forEach(function(svc) { %>
                <div class="col-md-6 col-lg-4">
                    <div class="card-schedora h-100">
                        <!-- Carousel if photos exist -->
                        <% if (svc.photos && svc.photos.length > 0) { %>
                            <div id="ownerCarousel<%= svc.id %>" class="carousel slide" data-bs-ride="false">
                                <div class="carousel-inner">
                                    <% svc.photos.forEach(function(p, pi) { %>
                                        <div class="carousel-item <%= pi === 0 ? 'active' : '' %>">
                                            <img src="/uploads/<%= p.filename %>" class="d-block w-100"
                                                 style="height:200px;object-fit:cover;" alt="">
                                        </div>
                                    <% }); %>
                                </div>
                                <% if (svc.photos.length > 1) { %>
                                    <button class="carousel-control-prev" type="button" data-bs-target="#ownerCarousel<%= svc.id %>" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon"></span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#ownerCarousel<%= svc.id %>" data-bs-slide="next">
                                        <span class="carousel-control-next-icon"></span>
                                    </button>
                                <% } %>
                                <div class="position-absolute top-0 end-0 m-2">
                                    <span class="badge bg-dark opacity-75"><i class="bi bi-images me-1"></i><%= svc.photos.length %></span>
                                </div>
                            </div>
                        <% } else { %>
                            <div class="d-flex align-items-center justify-content-center bg-light" style="height:200px;">
                                <i class="bi bi-image text-muted" style="font-size:2.5rem;"></i>
                            </div>
                        <% } %>

                        <div class="p-4">
                            <h5 class="fw-bold mb-1"><%= svc.name %></h5>
                            <% if (svc.description) { %>
                                <p class="text-muted small mb-2"><%= svc.description.substring(0,70) %><%= svc.description.length > 70 ? '...' : '' %></p>
                            <% } %>
                            <div class="d-flex justify-content-between mb-3">
                                <span class="text-gold fw-bold">$<%= parseFloat(svc.price).toFixed(2) %></span>
                                <span class="text-muted small"><i class="bi bi-clock me-1"></i><%= svc.duration_min %> min</span>
                            </div>

                            <div class="d-flex gap-2">
                                <a href="/owner/services/<%= svc.id %>/edit"
                                   class="btn-outline-gold flex-fill py-2 text-center small">
                                    <i class="bi bi-pencil me-1"></i><span data-i18n="owner_edit_btn">Edit</span>
                                </a>
                                <form action="/owner/services/<%= svc.id %>/delete" method="POST" class="flex-fill">
                                    <button type="submit" class="btn btn-outline-danger w-100 py-2 small"
                                            data-confirm="Delete this service? This cannot be undone."
                                            data-i18n-confirm="owner_delete_confirm">
                                        <i class="bi bi-trash me-1"></i><span data-i18n="owner_delete_btn">Delete</span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
