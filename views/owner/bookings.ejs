<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<div class="container py-5">
    <%- include('../partials/flash') %>

    <div class="page-header d-flex align-items-center justify-content-between">
        <div>
            <h2 data-i18n="owner_bookings_title">Manage Bookings</h2>
            <p class="text-muted mb-0"><span data-i18n="owner_bookings_subtitle">View and update booking statuses for</span> <strong><%= shop.name %></strong>.</p>
        </div>
    </div>

    <!-- Filter tabs -->
    <div class="d-flex gap-2 mb-4 flex-wrap">
        <a href="/owner/bookings"
           class="btn btn-sm <%= statusFilter === 'all' ? 'btn-dark' : 'btn-outline-secondary' %> rounded-pill px-3"
           data-i18n="owner_filter_all">All</a>
        <a href="/owner/bookings?status=pending"
           class="btn btn-sm <%= statusFilter === 'pending' ? 'btn-dark' : 'btn-outline-secondary' %> rounded-pill px-3"
           data-i18n="owner_filter_pending">Pending</a>
        <a href="/owner/bookings?status=confirmed"
           class="btn btn-sm <%= statusFilter === 'confirmed' ? 'btn-dark' : 'btn-outline-secondary' %> rounded-pill px-3"
           data-i18n="owner_filter_confirmed">Confirmed</a>
        <a href="/owner/bookings?status=completed"
           class="btn btn-sm <%= statusFilter === 'completed' ? 'btn-dark' : 'btn-outline-secondary' %> rounded-pill px-3"
           data-i18n="owner_filter_completed">Completed</a>
        <a href="/owner/bookings?status=cancelled"
           class="btn btn-sm <%= statusFilter === 'cancelled' ? 'btn-dark' : 'btn-outline-secondary' %> rounded-pill px-3"
           data-i18n="owner_filter_cancelled">Cancelled</a>
    </div>

    <% if (bookings.length === 0) { %>
        <div class="text-center py-5 bg-white rounded-4 border">
            <i class="bi bi-calendar-x display-4 text-muted mb-3 d-block"></i>
            <p class="text-muted" data-i18n="owner_no_bookings_filter">No bookings found for this filter.</p>
        </div>
    <% } else { %>
        <div class="table-responsive table-schedora rounded-4 overflow-hidden shadow-sm">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>#</th>
                        <th data-i18n="owner_tbl_client">Client</th>
                        <th data-i18n="owner_tbl_phone">Phone</th>
                        <th data-i18n="owner_tbl_service">Service</th>
                        <th data-i18n="owner_tbl_date">Date</th>
                        <th data-i18n="owner_tbl_time">Time</th>
                        <th data-i18n="owner_tbl_price">Price</th>
                        <th data-i18n="owner_tbl_status">Status</th>
                        <th data-i18n="owner_tbl_update">Update</th>
                    </tr>
                </thead>
                <tbody>
                    <% bookings.forEach(function(b) { %>
                        <tr>
                            <td data-label="#">#<%= b.id %></td>
                            <td data-label="Client" class="fw-semibold"><%= b.client_name %></td>
                            <td data-label="Phone" class="text-muted small"><%= b.client_phone || '—' %></td>
                            <td data-label="Service"><%= b.service_name %></td>
                            <td data-label="Date"><%= new Date(b.booking_date).toLocaleDateString('en-GB',{day:'2-digit',month:'short',year:'numeric'}) %></td>
                            <td data-label="Time"><%= b.booking_time.substring(0,5) %></td>
                            <td data-label="Price" class="text-gold fw-semibold">$<%= parseFloat(b.total_price).toFixed(2) %></td>
                            <td data-label="Status"><span class="status-badge badge-<%= b.status %>"><%= b.status %></span></td>
                            <td data-label="Update">
                                <% if (b.status === 'pending') { %>
                                    <form action="/owner/bookings/<%= b.id %>/status" method="POST" class="d-inline">
                                        <input type="hidden" name="status" value="confirmed">
                                        <button class="btn btn-sm btn-outline-primary me-1" data-i18n="owner_booking_confirm">Confirm</button>
                                    </form>
                                    <form action="/owner/bookings/<%= b.id %>/status" method="POST" class="d-inline">
                                        <input type="hidden" name="status" value="cancelled">
                                        <button class="btn btn-sm btn-outline-danger" data-i18n="owner_booking_cancel">Cancel</button>
                                    </form>
                                <% } else if (b.status === 'confirmed') { %>
                                    <form action="/owner/bookings/<%= b.id %>/status" method="POST" class="d-inline">
                                        <input type="hidden" name="status" value="completed">
                                        <button class="btn btn-sm btn-outline-success me-1" data-i18n="owner_booking_complete">Complete</button>
                                    </form>
                                    <form action="/owner/bookings/<%= b.id %>/status" method="POST" class="d-inline">
                                        <input type="hidden" name="status" value="cancelled">
                                        <button class="btn btn-sm btn-outline-danger" data-i18n="owner_booking_cancel">Cancel</button>
                                    </form>
                                <% } else { %>
                                    <span class="text-muted small">—</span>
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
