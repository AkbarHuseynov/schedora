<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<div class="container py-5">
    <%- include('../partials/flash') %>

    <div class="page-header">
        <h2>Wallet</h2>
        <p class="text-muted mb-0">Track your earnings and transaction history.</p>
    </div>

    <!-- Balance card -->
    <div class="row g-4 mb-5">
        <div class="col-md-5">
            <div class="wallet-balance-card">
                <p class="text-white opacity-75 small mb-1">Current Balance</p>
                <div class="balance-amount mb-1">$<%= parseFloat(shop.wallet_balance).toFixed(2) %></div>
                <p class="text-white opacity-60 small mb-0"><%= shop.name %></p>
            </div>
        </div>
        <div class="col-md-7 d-flex flex-column justify-content-center">
            <h6 class="fw-bold mb-2">How Earnings Work</h6>
            <p class="text-muted small mb-0">
                Every time you mark a booking as <strong>Completed</strong>, the booking total is automatically
                credited to your wallet. Contact the platform admin to withdraw your balance.
            </p>
        </div>
    </div>

    <!-- Transactions -->
    <h5 class="fw-bold mb-3">Transaction History</h5>
    <% if (transactions.length === 0) { %>
        <div class="text-center py-5 bg-white rounded-4 border">
            <i class="bi bi-receipt display-4 text-muted mb-3 d-block"></i>
            <p class="text-muted">No transactions yet. Complete bookings to earn revenue.</p>
        </div>
    <% } else { %>
        <div class="table-responsive table-schedora rounded-4 overflow-hidden shadow-sm">
            <table class="table mb-0">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Note</th>
                    </tr>
                </thead>
                <tbody>
                    <% transactions.forEach(function(t) { %>
                        <tr>
                            <td class="text-muted small"><%= new Date(t.created_at).toLocaleDateString('en-GB',{day:'2-digit',month:'short',year:'numeric'}) %></td>
                            <td>
                                <% if (t.type === 'credit') { %>
                                    <span class="badge bg-success-subtle text-success border border-success-subtle">Credit</span>
                                <% } else if (t.type === 'debit') { %>
                                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle">Debit</span>
                                <% } else { %>
                                    <span class="badge bg-secondary-subtle text-secondary border border-secondary-subtle">Adjustment</span>
                                <% } %>
                            </td>
                            <td class="fw-semibold <%= t.type === 'credit' ? 'text-success' : 'text-danger' %>">
                                <%= t.type === 'credit' ? '+' : '-' %>$<%= parseFloat(t.amount).toFixed(2) %>
                            </td>
                            <td class="text-muted small"><%= t.note || 'â€”' %></td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>
