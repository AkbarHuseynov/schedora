<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<div class="container py-5">
    <%- include('../partials/flash') %>

    <div class="page-header">
        <h2><%= shop ? 'Shop Settings' : 'Set Up Your Shop' %></h2>
        <p class="text-muted mb-0"><%= shop ? 'Update your shop profile and details.' : 'Fill in your shop details to start accepting bookings.' %></p>
    </div>

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-schedora p-4 p-md-5">
                <form action="/owner/shop/setup" method="POST" enctype="multipart/form-data">

                    <!-- Cover image -->
                    <div class="mb-4">
                        <label class="form-label">Cover Image</label>
                        <% if (shop && shop.cover_image) { %>
                            <img src="/uploads/<%= shop.cover_image %>" id="coverPreviewImg"
                                 class="cover-preview d-block mb-2" style="display:block!important;">
                        <% } else { %>
                            <img id="coverPreviewImg" src="" class="cover-preview d-none mb-2">
                        <% } %>
                        <input type="file" name="cover_image" id="cover_image" class="form-control" accept="image/*">
                        <small class="text-muted">Recommended: 1200Ã—400px. Max 5MB.</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Shop Name <span class="text-danger">*</span></label>
                        <input type="text" name="name" class="form-control" required
                               value="<%= shop ? shop.name : '' %>" placeholder="e.g. The Golden Cut">
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Category <span class="text-danger">*</span></label>
                        <select name="category" class="form-select" required>
                            <option value="barber" <%= shop && shop.category === 'barber' ? 'selected' : '' %>>Barber</option>
                            <option value="beauty" <%= shop && shop.category === 'beauty' ? 'selected' : '' %>>Beauty Salon</option>
                            <option value="spa"    <%= shop && shop.category === 'spa'    ? 'selected' : '' %>>Spa</option>
                            <option value="laser"  <%= shop && shop.category === 'laser'  ? 'selected' : '' %>>Laser</option>
                            <option value="other"  <%= shop && shop.category === 'other'  ? 'selected' : '' %>>Other</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="description" class="form-control" rows="3"
                                  placeholder="Describe your shop and services..."><%= shop ? shop.description : '' %></textarea>
                    </div>

                    <div class="row g-3 mb-3">
                        <div class="col-md-8">
                            <label class="form-label">Address</label>
                            <input type="text" name="address" class="form-control"
                                   value="<%= shop ? shop.address : '' %>" placeholder="123 Main St, City">
                        </div>
                        <div class="col-md-4">
                            <label class="form-label">Phone</label>
                            <input type="tel" name="phone" class="form-control"
                                   value="<%= shop ? shop.phone : '' %>" placeholder="+1 555 0000">
                        </div>
                    </div>

                    <div class="d-flex gap-3 mt-4">
                        <a href="/owner/dashboard" class="btn-outline-gold flex-fill py-3 text-center">Cancel</a>
                        <button type="submit" class="btn-gold flex-fill py-3 fw-semibold">
                            <i class="bi bi-check-lg me-1"></i> <%= shop ? 'Save Changes' : 'Create Shop' %>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
