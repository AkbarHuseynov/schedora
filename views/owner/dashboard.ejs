<%- include('../partials/head') %>
<%- include('../partials/navbar') %>

<div class="container py-5">
    <%- include('../partials/flash') %>

    <div class="page-header d-flex align-items-center justify-content-between">
        <div>
            <h2>Owner Dashboard</h2>
            <p class="text-muted mb-0">Manage your shop, services, and bookings.</p>
        </div>
        <% if (shop) { %>
            <a href="/owner/services/new" class="btn-gold px-4 py-2 d-none d-md-inline-flex align-items-center gap-2">
                <i class="bi bi-plus"></i> Add Service
            </a>
        <% } %>
    </div>

    <% if (!shop) { %>
        <!-- No shop setup yet -->
        <div class="text-center py-5 bg-white rounded-4 border">
            <i class="bi bi-shop display-3 text-muted mb-3 d-block"></i>
            <h4 class="fw-bold mb-2">Set Up Your Shop</h4>
            <p class="text-muted mb-4">Create your shop profile to start accepting bookings.</p>
            <a href="/owner/shop/setup" class="btn-gold px-5 py-3 fs-6 d-inline-flex align-items-center gap-2">
                <i class="bi bi-gear"></i> Set Up Shop
            </a>
        </div>
    <% } else { %>

        <!-- Stat cards -->
        <div class="row g-3 mb-5">
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-icon gold"><i class="bi bi-calendar-check"></i></div>
                    <div>
                        <div class="fw-bold fs-4"><%= stats.total || 0 %></div>
                        <div class="text-muted small">Total Bookings</div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-icon blue"><i class="bi bi-hourglass-split"></i></div>
                    <div>
                        <div class="fw-bold fs-4"><%= stats.pending || 0 %></div>
                        <div class="text-muted small">Pending</div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="stat-card">
                    <div class="stat-icon green"><i class="bi bi-check-circle"></i></div>
                    <div>
                        <div class="fw-bold fs-4"><%= stats.completed || 0 %></div>
                        <div class="text-muted small">Completed</div>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <a href="/owner/wallet" class="d-block text-decoration-none">
                    <div class="stat-card">
                        <div class="stat-icon purple"><i class="bi bi-wallet2"></i></div>
                        <div>
                            <div class="fw-bold fs-4 text-gold">$<%= parseFloat(shop.wallet_balance).toFixed(2) %></div>
                            <div class="text-muted small">Wallet Balance</div>
                        </div>
                    </div>
                </a>
            </div>
        </div>

        <!-- Quick nav -->
        <div class="row g-3 mb-5">
            <div class="col-6 col-md-3">
                <a href="/owner/services" class="d-block card-schedora p-3 text-center">
                    <i class="bi bi-grid fs-2 text-gold mb-2 d-block"></i>
                    <span class="fw-semibold small">My Services</span>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a href="/owner/bookings" class="d-block card-schedora p-3 text-center">
                    <i class="bi bi-calendar2-week fs-2 text-gold mb-2 d-block"></i>
                    <span class="fw-semibold small">Bookings</span>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a href="/owner/wallet" class="d-block card-schedora p-3 text-center">
                    <i class="bi bi-wallet2 fs-2 text-gold mb-2 d-block"></i>
                    <span class="fw-semibold small">Wallet</span>
                </a>
            </div>
            <div class="col-6 col-md-3">
                <a href="/owner/shop/setup" class="d-block card-schedora p-3 text-center">
                    <i class="bi bi-gear fs-2 text-gold mb-2 d-block"></i>
                    <span class="fw-semibold small">Shop Settings</span>
                </a>
            </div>
        </div>

        <!-- Recent bookings table -->
        <h5 class="fw-bold mb-3">Recent Bookings</h5>
        <% if (recentBookings.length === 0) { %>
            <div class="text-center py-4 bg-white rounded-4 border">
                <p class="text-muted mb-0">No bookings received yet.</p>
            </div>
        <% } else { %>
            <div class="table-responsive table-schedora rounded-4 overflow-hidden shadow-sm">
                <table class="table mb-0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Client</th>
                            <th>Service</th>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% recentBookings.forEach(function(b) { %>
                            <tr>
                                <td class="text-muted">#<%= b.id %></td>
                                <td class="fw-semibold"><%= b.client_name %></td>
                                <td><%= b.service_name %></td>
                                <td><%= new Date(b.booking_date).toLocaleDateString('en-GB',{day:'2-digit',month:'short',year:'numeric'}) %></td>
                                <td><%= b.booking_time.substring(0,5) %></td>
                                <td class="text-gold fw-semibold">$<%= parseFloat(b.total_price).toFixed(2) %></td>
                                <td><span class="status-badge badge-<%= b.status %>"><%= b.status %></span></td>
                                <td>
                                    <a href="/owner/bookings" class="btn btn-sm btn-outline-secondary">Manage</a>
                                </td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
            <div class="text-end mt-2">
                <a href="/owner/bookings" class="text-gold small">View all bookings <i class="bi bi-arrow-right"></i></a>
            </div>
        <% } %>
    <% } %>
</div>

<%- include('../partials/footer') %>
